<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/margen_pantalla_default_horizontal"
    android:paddingVertical="@dimen/margen_pantalla_default_vertical"
    tools:context=".ListaPeliculasActivity">

    <TextView
        android:id="@+id/tvPeliculasNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

        android:text="TextView"
        android:textSize="24sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCountryList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="UnknownIdInLayout"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_character"
        android:layout_width="@dimen/imagen_lista_personajes_tamanho"
        android:layout_height="@dimen/imagen_lista_personajes_tamanho"
        android:padding="2.5dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="234dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>